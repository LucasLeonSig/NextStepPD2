    padding: 120px 5% 80px;
    position: relative;
    overflow: hidden;
}

.page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 70% 30%, var(--taxi-yellow-glow) 0%, transparent 50%);
    opacity: 0.1;
    pointer-events: none;
}

.page-header-content {
    max-width: 800px;
    text-align: center;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

.page-header-content h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    margin: var(--spacing-lg) 0;
    line-height: 1.1;
}

.page-header-content .lead {
    font-size: clamp(1.1rem, 3vw, 1.4rem);
    color: var(--text-secondary);
    margin-top: var(--spacing-lg);
    line-height: 1.6;
}

